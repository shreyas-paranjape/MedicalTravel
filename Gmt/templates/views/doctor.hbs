<!-- <div class="container"> -->
<div class="row procedure">
	<div class="col-lg-8 borders">
		<div class="row doc" style="height:350px">
			<div class="col-lg-4">
				<img src="images/logo.png" style="margin-left:50px">
			</div>
			<div class="col-lg-4" style="margin-top:-30px;">
				{{#each doctor}}
					<h3>{{name}}</h3>
					<p style="font-size: 18px;">{{{bio}}}</p>
				{{/each}}
			</div>
			<div class="col-lg-4">
				<input type="text" class="form-control" id="text" value="Verified">
			</div>
		</div>
		<div class="scrolls" data-spy="scroll" data-target="#navbar-example" style="margin-top: 4px;margin-left:20px">


			<nav class="navbar navbar-default">
				<ul class="nav navbar-nav">
					<li><a href="#bio">Bio</a></li>
					<li><a href="#education">Education</a></li>
					<li><a href="#awards">Awards</a></li>
					<li><a href="#reviews">Reviews</a></li>
				</ul>
			</nav>

			<h4 id="bio"></h4>
			<div class="row">
				<div class="col-lg-1">
				</div>
				<div class="col-lg-1">

					{{#each provider}}
						<p>
							{{{description}}}
						</p>
					{{/each}}
				</div>
				<div class="col-lg-1">
				</div>
			</div>
			<h4 id="education">
				<span>Education</span>
			</h4>
			<h3 style="margin-left: 60px;font-size:18px;">{{{doctor.description}}}</h3>
			<h4 id="awards" style="">
				<span>Awards</span>
			</h4>
			<h4 id="reviews" style="">
				<span>Reviews</span>
			</h4>
			<span class="glyphicon glyphicon-star" style="margin-left:30px"></span>
			<span class="glyphicon glyphicon-star"></span>
			<span class="glyphicon glyphicon-star"></span>
			<p style="margin-left: 30px;">Lorem Ipsum,</p>
			<p style="margin-left: 30px;">dolor ahajfnnsnsAMnkjndj janangfgbdbd</p>
			<p style="margin-left: 30px;">jjjajjaa ahnf go away somehwhere, best care and</p>
			<p style="margin-left: 30px;">help all over.</p>
			<button type="submit" class="btn btn-default" style="margin-left:30px; ">Write a review</button>
		</div>
	</div>
	<div class="col-lg-4 name">
		<h3>
			{{#each speciality}}
				<p style="padding-left: 30px; padding-top: 10px;"> {{name}} </p>
			{{/each}}
		</h3>
		<br>
		<br>
		<div class="form">
			<form class="form-inline" method="post">
				<input type="hidden" name="action" value="enquire">
				<div class="form-group nm">
					<input type="text" name="name.full" class="form-control" id="name" placeholder="Name:">
				</div>
				<div class="form-group">
					<input type="email" name="email" class="form-control" id="email" placeholder="Email:">
				</div>
				<div class="form-group">
					<input type="phone" name="phone" class="form-control" id="phone" placeholder="Phone(Optional)">
				</div>
				<div class="form-group">
					<input type="text" name="procedure" class="form-control" id="procedure" placeholder="Procedure">
					<input type="hidden" id="procedureId" name="procedureId" value="">
				</div>
				<div class="form-group">
					<textarea class="textarea" name="message" rows="5" placeholder="Questions/Comments"></textarea>
				</div>
				<br>
				<input type="submit" value="Consultation" class="button" style="" />
			</form>
			{{#if consultationSent}}
				<br>
				<h3 style="margin-left: 0px;">Consultation Sent successfully</h3>
			{{/if}}
			<br>
		</div>
	</div>
</div>
