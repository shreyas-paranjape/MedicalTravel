<div class="container">


	  <div class="row treatment">
		<div class="col-lg-9" style="border-right:2px solid #e5e5e5">
		<img src="images/hosp3.png">
    <div class="scrolls" data-spy="scroll" data-target="#navbar-example" style="margin-top: 4px;margin-left:20px">
    <div id="navbar-example">
			<ul class="nav nav-pills nav-justified pills" role="tablist" >
			{{#each doctor_nav}}
			<li class="active"><a href="#about">{{name}}</a></li>
			{{/each}}
			</ul>
		</div>

    <h4 id="about"></h4>
		<p style="font-size: 16px; margin-top: 45px; border-bottom: 2px solid #e5e5e5; padding-bottom: 40px; margin-left: -40px;">
	 {{{provider.description}}}</p>

    <h4 id="doctors" style="margin-left:-32px">Doctors</h4>
     {{#each doctors}}
		<div class="row treat">
		<div class="col-lg-3 ">
		<img class="circle" src="images/logo.png">
		</div>

    <div class="col-lg-6  treatment-doc">
    <h3>{{name}}</h3>
		<p>{{description}}</p>
		<p>{{data}}</p>
    </div>

    <div class="col-lg-3">
		<button type="button" class="btn btn-default">Verified</button>
		</div>
	  </div>
    {{/each}}

		<h4 id="procedures" style="margin-left:-32px">Procedures</h4>
		<div class="row proc">
		{{#each doctor_pro}}
		<div class="col-lg-4">
		<button type="button" class="btn btn-default">{{name}}</button>
	  </div>
		{{/each}}
		</div>
		</div>
		</div>

		<div class="col-lg-3">
		<h3 style="background-color:#e5e5e5;font-size:18px;width: 320px;height:40px; margin-left: -10px;padding-top:12px;text-align:left;padding-left:10px">{{providers.name}}</h3>
		<br><br>

			<form>
			<div class="form-group">
			<input type="name" class="form-control" id="name" placeholder="Name:" style="width: 300px; height: 45px;">
			</div>
			<div class="form-group">
			<input type="email" class="form-control" id="email" placeholder="Email:" style="width: 300px; height: 45px;">
			</div>
			<div class="form-group">
			<input type="phone" class="form-control" id="phone" placeholder="Phone(Optional)" style="width: 300px; height: 45px;">
			</div>
			<div class="form-group">
			  <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
         Treatment
        <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a href="#">A</a></li>
        <li><a href="#">B</a></li>
        <li><a href="#">C</a></li>
        </ul>
        </div>
		   	</div>
				 <br>
				<!-- <input type="treatment" class="form-control" id="treatment" placeholder="Treatment" style="width: 300px; height: 45px;">
				</div> -->
			<div class="form-group">
			<textarea class="form-control" rows="5" placeholder="Questions/Comments" style="width: 300px;"></textarea>
		  </div>
			</form>

			<br>
			<br>
			<br>
			<button type="button" class="btn btn-default" style="margin-left:15px;width:170px;height:40px;margin-left: 0px">Enquire</button>
			</div>
		</div>
