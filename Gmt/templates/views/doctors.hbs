						<!-- </a> -->
					</div>
				</div>
			{{/each}}
		</div>
	</div>
	<div class="col-lg-3 col-sm-3 col-xs-0 col-md-3 qwe ">
		<h4 class="specialities">Filter Doctors by Procedure</h4>
		<div class="panel-group panel_doc" id="accordion" role="tablist" aria-multiselectable="true" style="">
			{{#each speciality}}

				<div class="panel panel-default" >
					<div class="panel-heading panel_heading" role="tab" id="headingOne">

						<a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{key}}" aria-expanded="false" aria-controls="collapseOne"
						 style="outline:none;color:black;">
							<h4 class="panel-title">
								<div class="row accordion_doc">
									<div class="col-lg-10 col-sm-10 col-xs-10 col-md-10 pro" style="">
										{{name}}
									</div>
									<div class="col-lg-2 col-sm-2 col-xs-2 col-md-2 icon">
										<span class="glyphicon glyphicon-chevron-down"  style="top: 5px;"></span>
									</div>
								</div>
							</h4>
						</a>

					</div>
					<div id="{{key}}" class="panel-collapse collapse " role="tabpanel" aria-labelledby="headingOne">
						<div class="panel-body">

							{{#each procedures}}
								<div>
									<input type="radio">
									<span style="font-family:SourceSansPro-Regular">{{name}}</span>
								</div>
							{{/each}}
						</div>
					</div>
				</div>

			{{/each}}
		</div>
	</div>



</div>



